<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zfj="http://schemas.android.com/apk/res/com.zfj123.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:gravity="center"
        android:background="#8866ff00"
        android:textSize="22sp"
        android:textColor="#000000"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="3.设置安全号码" />
    
    <TextView 
        style="@style/text_content_style"
        android:text="SIM卡变更后\n报警短信会发送给安全号码"
        />
    
    <EditText 
        android:id="@+id/et_setup3_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入安全电话号码"
        android:inputType="phone"
        />
    
    <Button 
        android:onClick="selectContact"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择联系人"
        />
    
       <LinearLayout 
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           
           <ImageView 
               android:src="@android:drawable/presence_invisible"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           
           
           <ImageView 
               android:src="@android:drawable/presence_invisible"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           
           <ImageView 
               android:src="@android:drawable/presence_online"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           
           <ImageView 
               android:src="@android:drawable/presence_invisible"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           
       </LinearLayout>
       
       <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           
           <ImageView 
               android:layout_centerInParent="true"
               android:src="@drawable/phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               />
           
           <Button
               style="@style/button_next_style"/>
           
           <Button 
               style="@style/button_pre_style"
               />
           
       </RelativeLayout>
</LinearLayout>
